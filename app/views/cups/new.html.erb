<%= form_with model: Cup.new do |form| %>
  <p>
    <%= form.label 'Cup Name' %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label 'Colour' %><br>
    <%= form.text_field :color %>
  </p>

  <p>
    <%= form.label 'Capacity' %><br>
    <%= form.text_field :capacity %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
